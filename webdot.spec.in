# @configure_input@

%define prefix  /home/httpd/html/cgi-bin
%define ver     @VERSION@
%define rel     2

Name:           webdot
Version:        %{ver}
Release:        %{rel}
Group:          Applications/Scientific
Copyright:      distributable
URL:            http://www.graphviz.org/
Summary:        A web-based graph server

Requires:       graphviz apache
Source:         webdot-%{ver}.tar.gz
BuildRoot:      /tmp/webdot-%{ver}-root

%description
A CGI program that uses tcldot from graphviz to demonstrate the
graph-layout capabilities of graphviz on a web server.

%prep

%setup

%build
CFLAGS="$RPM_OPT_FLAGS" ./configure --prefix=%{prefix}
make

%install
rm -rf $RPM_BUILD_ROOT
make install prefix=$RPM_BUILD_ROOT%{prefix}

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%{prefix}/graphviz/*
